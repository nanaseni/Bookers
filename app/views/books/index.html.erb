  <body>
    <h1>Books</h1>
    <table>
     <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan ="3"></th>
      </tr>
     </thead>
    <tbody>
   <% @index.each do |book| %>
       <tr>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
        <td> <%= link_to "Show", book_path(book.id) %> </td>
        <td> <%= link_to "Edit", edit_book_path(book.id) %> </td>
        <td> <%= link_to "Destroy", book_path(book.id), method: :delete ,"data-confirm"=>"Are you sure?" %> </td>
       </tr>
    <% end %>
     </tbody>
    </table>

    <h2>New book</h2>

  <% if @new.errors.any? %>
     <div id= "error_explain">
       <h2>
       <%= @new.errors.count %>errors prohibited this book from being saved:
       </h2>
       <ul>
        <% @new.errors.full_messages.each do |message| %>
        ã€€<li><%= message %></li>
        <% end %>
       </ul>
     </div>
     <%= form_with model: @new do |f| %>
     <div class="field">
       <div class="errors">
           <label>Title</label>
       </div>
       <div class="errors">
           <%= f.text_field:title %>
       </div>
     </div>
     <div class="field">
       <div class="errors">
           <label>Body</label>
       </div>
       <div class="errors">
           <%= f.text_area:body %>
       </div>
     </div> 
      
       <div class="actions"><%= f.submit 'Create Book'%></div>
     <% end %>
     
  <% else %> 
  
    <%= form_with model: @new do |f| %>
       <div class="field">
           <label>Title</label>
           <%= f.text_field:title %>
       </div>
       <div class="field">
           <label>Body</label>
           <%= f.text_area:body %>
       </div>
       <div class="actions"><%= f.submit 'Create Book'%></div>
     <% end %>

  <% end %>
</body>
